{% extends "base.html.twig" %}

{% block body %}

<div class="container">
    {{ form_start(form) }}
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.name }}</td>
                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalConfrim" data-whatever="{{ path('admin.role.remove', {id: role.id}) }}">Remove</button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal fade" id="modalConfrim" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are your sure to remove this role ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a id="remove_confirm" href="" class="btn btn-primary">Confirm & Remove</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}