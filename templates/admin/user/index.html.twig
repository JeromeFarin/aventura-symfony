{% extends "base.html.twig" %}

{% block body %}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Edit</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td scope="row">{{user.username}}</td>
                    <td>{{user.email}}</td>
                    <td>
                        {% set role_name = [] %}
                        {% for urole in user.roles %}
                            {% for role in roles %}
                                {% if role.id == urole %}
                                    {% set role_name = role_name|merge([role.name]) %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                        {{role_name | join(' | ') }}
                    </td>
                    <td><a href="{{ path('admin.user.edit', {id: user.id}) }}" class="btn btn-primary">Edit</a></td>
                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalConfrim" data-whatever="{{ path('admin.user.remove', {id: user.id}) }}">Remove</button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal fade" id="modalConfrim" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are your sure to remove this user ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a id="remove_confirm" href="" class="btn btn-primary">Confirm & Remove</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}