<header>
    <div class="jumbotron p-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-3"><a href="{{ path('index') }}">{% block title %}Aventura{% endblock %}</a></h1>
                <div id="member">
                    {% if app.user %}
                        <p><a href="{{ path('index') }}">{{app.user.username}}</a> | <a href="{{ logout_path('main') }}">Logout</a>
                    {% else %}
                        <p><a href="{{ path('app_login') }}">Login</a> | <a href="{{ path('register') }}">Register</a></p>
                    {% endif %}
                </div>
            </div>
            <div class="d-flex justify-content-center" id="admin_navbar">
                <a class="p-1" href="/admin/category">Category</a>
                <a class="p-1" href="/admin/user">Member</a>
            </div>
        </div>
    </div>
</header>