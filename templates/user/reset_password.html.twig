{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form method="post">
            <div class="form-group">
              <label for="code">Code</label>
              <input type="text" name="code" id="code" class="form-control" placeholder="code" aria-describedby="helpId">
            </div>
            <div class="form-group">
              <label for="old_password">Old Password</label>
              <input type="password" name="old_password" id="old_password" class="form-control" placeholder="old password" aria-describedby="helpId">
            </div>
            <div class="form-group">
              <label for="new_password_1">New Password</label>
              <input type="password" name="new_password_1" id="new_password_1" class="form-control" placeholder="new password" aria-describedby="helpId">
            </div>
            <button type="submit" class="btn btn-primary">Change</button>
        </form>
    </div>
{% endblock %}